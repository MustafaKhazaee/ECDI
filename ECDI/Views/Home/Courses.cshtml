@model List<Course>
<div id="wrapper-content"><!-- PAGE WRAPPER-->
    <div id="page-wrapper"><!-- MAIN CONTENT-->
        <div class="main-content"><!-- CONTENT-->
            <div class="content">
                <div class="section background-opacity page-title set-height-top">
                    <div class="container">
                        <div class="page-title-wrapper"><!--.page-title-content--><h2 class="captions">all categories</h2>
                            <ol class="breadcrumb">
                                <li><a href="index-2.html">Home</a></li>
                                <li class="active"><a href="#">Categories</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="section section-padding courses">
                    <div class="container">
                        <div class="courses-wrapper">
                            <div class="tab-content courses-content">
                                <div id="campus" role="tabpanel" class="tab-pane fade in active">
                                    <div class="style-show style-grid row">
                                        @foreach (Course course in Model) {
                                            <div class="col-style">
                                                <div class="edugate-layout-2">
                                                    <div class="edugate-layout-2-wrapper">
                                                        <div class="edugate-content"><a class="title">@course.Name</a>
                                                            <div class="info">
                                                                <div class="author item"><a href="#">By @course.Teacher.FirstName @course.Teacher.LastName</a></div>
                                                                <div class="date-time item"><a href="#">@course.StartDate?.ToString("dd MMM yyyy")</a></div>
                                                            </div>
                                                            <div class="info-more">
                                                                <div class="view item"><i class="fa fa-time"></i>
                                                                    <p>Time: @course.Time</p></div>
                                                                <div class="comment item"><i class="fa fa-users"></i>
                                                                    <p> 20</p></div>
                                                            </div>
                                                            <div title="Rated 5.00 out of 5" class="star-rating"><span class="width-80"><strong class="rating">5.00</strong> out of 5</span></div>
                                                            <div class="description">@course.Description</div>
                                                            <a href="/Home/CourseDetails?course=@course.Id" class="btn btn-green"><span>Details</span></a>
                                                        </div>
                                                        <div class="edugate-image">
                                                            <img class="img-responsive" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(course.Photo == null ? new byte [] {} : course.Photo))" />
                                                            @*<img src="~/assets/images/courses/courses-4.jpg" alt="" class="img-responsive"/>*@
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BUTTON BACK TO TOP-->
    <div id="back-top"><a href="#top"><i class="fa fa-angle-double-up"></i></a></div>
</div>